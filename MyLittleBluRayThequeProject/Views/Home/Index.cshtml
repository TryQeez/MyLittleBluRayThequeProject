@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
        <thead>
          <tr>
                <th scope="col">Titre</th>
                <th scope="col">Date de sortie</th>
                <th scope="col">Scénariste</th>
                <th scope="col">Réalisateur</th>
                <th scope="col">Version</th>
                <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var br in Model?.BluRays)
            {
                <tr>
                    <td><a asp-area="" asp-controller="Home" asp-action="SelectedBluRay" asp-route-id="@br.Id">@br.Titre</a></td>
                    <td>@br.DateSortie.Date.ToString("dd/MM/yyyy")</td>
                    <td>@br.Scenariste.Nom</td>
                    <td>@br.Realisateur.Nom</td>
                    <td>@br.Version</td>
                    <td>
                        <i class=""></i>
                                @if (@br.Disponible)
                                {
                                    <a asp-controller="Home" asp-action="DeleteBluray" asp-route-id="@br.Id" class="link-danger">DELETE</a>
                                }
                                @if (@br.Proprietaire != null)
                                {
                                    <a asp-controller="Home" asp-action="RenduBluRay" asp-route-id="@br.Id" class="link-danger">RENDRE</a>
                                }
                    </td>
                    @{ i++; }
                </tr>
            }
        </tbody>
      </table>
    </div>
  </div>
</div>
