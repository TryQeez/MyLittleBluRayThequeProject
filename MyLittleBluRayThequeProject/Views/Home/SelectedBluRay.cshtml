@model IndexViewModel
@{
    ViewData["Title"] = "Selected BluRay Page";

}
<div class="text-center">
    <div>
    Titre : @Model.SelectedBluRay.Titre
    </div>
    <div class="info-acteur">
        <h1>Acteurs : </h1>@foreach (var act in Model.SelectedBluRay.Acteurs)
        {
                <p>nom :  @act.Nom prenom :  @act.Prenom</p>
        }
    </div>
    <div>
    Date de sortie : @Model.SelectedBluRay.DateSortie.ToShortDateString()
    </div>

</div> 